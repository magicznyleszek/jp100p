<article>

    <a href="{{ post.url }}">
        <img src="public/images/{{ post.slug }}/{{ post.cover }}" alt="{{ post.title }}" />
    </a>

    <h3><a href="{{ post.url }}">{{ post.title }}</a></h3>

    <time>{{ post.date | date: "%B %Y" }}</time>

    {% include modules/post-categories-list.liquid categories=post.categories %}

</article>
